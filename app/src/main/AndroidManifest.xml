<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.highelo.eatoutwithstrangers">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AdminActivities.AdminActivity" />
        <activity android:name=".AdminActivities.ReportActivity"
            android:parentActivityName=".AdminActivities.AdminActivity"
            android:launchMode="singleTop"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".StartActivities.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StartActivities.LoginActivity"
            android:parentActivityName=".StartActivities.StartActivity" />
        <activity android:name=".StartActivities.VerifyEmailActivity" />
        <activity
            android:name=".StartActivities.ForgotPasswordActivity"
            android:parentActivityName=".StartActivities.LoginActivity" />
        <activity
            android:name=".StartActivities.RegisterActivity"
            android:parentActivityName=".StartActivities.StartActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".JoinedEvents.JoinedEventsActivity" />
        <activity
            android:name=".JoinedEvents.JoinedEventPreviewActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:launchMode="singleTop"
            android:parentActivityName=".JoinedEvents.JoinedEventsActivity" />
        <activity
            android:name=".ManageEvent.ManageEventActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:launchMode="singleTop"
            android:parentActivityName=".ManageEvent.YourEventsActivity" />
        <activity android:name=".ManageEvent.YourEventsActivity" />
        <activity
            android:name=".ProfilePreviewActivity"
            android:parentActivityName=".ManageEvent.ManageEventActivity" />
        <activity
            android:name=".ManageEvent.MapActivity"
            android:parentActivityName=".ManageEvent.CreateEventActivity" />
        <activity android:name=".SearchEvent.SearchEventActivity" />
        <activity
            android:name=".SearchEvent.EventPreviewActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:launchMode="singleTop"
            android:parentActivityName=".SearchEvent.SearchEventActivity" />
        <activity
            android:name=".ManageEvent.CreateEventActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ManageEvent.YourEventsActivity" />
        <activity android:name=".ProfileActivities.ChangePasswordActivity" />
        <activity
            android:name=".ProfileActivities.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProfileActivities.EditProfileActivity"
            android:parentActivityName=".ProfileActivities.ProfileActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>