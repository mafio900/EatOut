<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchEventSettingsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="Wybierz dystans szukania wydarzeÅ„ w okolicy"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <RadioGroup
        android:id="@+id/settings_radio_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <RadioButton
            android:id="@+id/settings_radio_button_10km"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10km"
            android:onClick="checkButton" />

        <RadioButton
            android:id="@+id/settings_radio_button_15km"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15km"
            android:onClick="checkButton"/>

        <RadioButton
            android:id="@+id/settings_radio_button_20km"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20km"
            android:onClick="checkButton"/>

        <RadioButton
            android:id="@+id/settings_radio_button_30km"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:onClick="checkButton"
            android:text="30km" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>