<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_event_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temat"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_event_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adres"
        android:textColor="#666"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/list_event_theme"
        app:layout_constraintTop_toBottomOf="@+id/list_event_theme" />

    <TextView
        android:id="@+id/list_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Data"
        android:textColor="#666"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/list_event_manage_divider"
        app:layout_constraintStart_toStartOf="@+id/list_event_address"
        app:layout_constraintTop_toBottomOf="@+id/list_event_address" />

    <View
        android:id="@+id/list_event_manage_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>