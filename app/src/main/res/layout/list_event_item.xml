<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/list_event_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/placeholder" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_event_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/white"
        android:src="@drawable/ic_person"
        app:layout_constraintStart_toStartOf="@+id/list_event_image"
        app:layout_constraintTop_toTopOf="@+id/list_event_image" />

    <TextView
        android:id="@+id/list_event_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/list_event_profile_image"
        app:layout_constraintStart_toEndOf="@+id/list_event_profile_image"
        app:layout_constraintTop_toTopOf="@+id/list_event_profile_image" />

    <TextView
        android:id="@+id/list_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/list_event_address"
        app:layout_constraintStart_toStartOf="@+id/list_event_address"
        tools:text="Data wydarzenia" />

    <TextView
        android:id="@+id/list_event_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#CCC"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/list_event_image"
        app:layout_constraintEnd_toEndOf="@id/list_event_image"
        app:layout_constraintStart_toStartOf="@+id/list_event_image"
        tools:text="Adres wydarzenia" />

    <TextView
        android:id="@+id/list_event_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/list_event_image"
        app:layout_constraintTop_toBottomOf="@+id/list_event_image"
        tools:text="Temat wydarzenia" />

    <TextView
        android:id="@+id/list_event_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Dołączyło 0/10"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="@+id/list_event_theme"
        app:layout_constraintTop_toBottomOf="@+id/list_event_theme" />

    <TextView
        android:id="@+id/list_event_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:textColor="#333"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/list_event_divider"
        app:layout_constraintStart_toStartOf="@+id/list_event_theme"
        app:layout_constraintTop_toBottomOf="@+id/list_event_capacity"
        tools:text="Opis wydarzenia" />

    <View
        android:id="@+id/list_event_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>