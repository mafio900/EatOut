<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <include
        layout="@layout/toolbar_main"
        android:id="@+id/toolbar"/>

    <EditText
        android:id="@+id/emailLgET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/passwordLgET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/emailLgET"
        app:layout_constraintStart_toStartOf="@+id/emailLgET"
        app:layout_constraintTop_toBottomOf="@+id/emailLgET" />

    <Button
        android:id="@+id/loginLgBT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/login"
        app:layout_constraintEnd_toEndOf="@+id/passwordLgET"
        app:layout_constraintStart_toStartOf="@+id/passwordLgET"
        app:layout_constraintTop_toBottomOf="@+id/passwordLgET" />

    <TextView
        android:id="@+id/registerLgTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Jesteś tutaj poraz pierwszy? Zarejestruj się!"
        app:layout_constraintEnd_toEndOf="@+id/loginLgBT"
        app:layout_constraintStart_toStartOf="@+id/loginLgBT"
        app:layout_constraintTop_toBottomOf="@+id/loginLgBT" />

    <TextView
        android:id="@+id/forgotPassLgTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Zapomniałeś hasła?"
        app:layout_constraintEnd_toEndOf="@+id/registerLgTV"
        app:layout_constraintStart_toStartOf="@+id/registerLgTV"
        app:layout_constraintTop_toBottomOf="@+id/registerLgTV" />

    <ProgressBar
        android:id="@+id/progressBarLg"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/forgotPassLgTV"
        app:layout_constraintStart_toStartOf="@+id/forgotPassLgTV"
        app:layout_constraintTop_toBottomOf="@+id/forgotPassLgTV" />

</androidx.constraintlayout.widget.ConstraintLayout>