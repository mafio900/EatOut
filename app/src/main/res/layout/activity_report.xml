<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".AdminActivities.ReportActivity">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_main" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_horizontal"
            android:text="@string/reporting_user"
            android:textColor="@color/primary"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/report_reporting_user_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_person"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/report_reporting_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/report_reporting_user_image"
            app:layout_constraintTop_toTopOf="@+id/report_reporting_user_image"
            tools:text="Imie" />

        <TextView
            android:id="@+id/report_reporting_user_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="24sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/report_reporting_user_name"
            app:layout_constraintStart_toEndOf="@+id/report_reporting_user_name"
            tools:text="wiek" />

        <TextView
            android:id="@+id/report_reporting_user_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxLines="2"
            android:textColor="@color/divider"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/report_reporting_user_name"
            app:layout_constraintTop_toBottomOf="@+id/report_reporting_user_name"
            tools:text="opis" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"
            android:text="@string/reported_user"
            android:textColor="@color/primary"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/report_reporting_user_description"
            app:layout_constraintStart_toStartOf="@+id/report_reporting_user_image"
            app:layout_constraintTop_toBottomOf="@+id/report_reporting_user_image" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/report_reported_user_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_person"
            app:layout_constraintStart_toStartOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <TextView
            android:id="@+id/report_reported_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/report_reporting_user_description"
            app:layout_constraintTop_toTopOf="@+id/report_reported_user_image"
            tools:text="Imie" />

        <TextView
            android:id="@+id/report_reported_user_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="24sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/report_reported_user_name"
            app:layout_constraintStart_toEndOf="@+id/report_reported_user_name"
            tools:text="wiek" />

        <TextView
            android:id="@+id/report_reported_user_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textColor="@color/divider"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/textView13"
            app:layout_constraintStart_toStartOf="@+id/report_reported_user_name"
            app:layout_constraintTop_toBottomOf="@+id/report_reported_user_name"
            tools:text="Opis" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal"
            android:text="@string/information_about_the_report"
            android:textColor="@color/primary"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/report_reported_user_description"
            app:layout_constraintStart_toStartOf="@+id/report_reported_user_image"
            app:layout_constraintTop_toBottomOf="@+id/report_reported_user_image" />

        <TextView
            android:id="@+id/report_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="start"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/textView18"
            app:layout_constraintStart_toStartOf="@+id/textView18"
            app:layout_constraintTop_toBottomOf="@+id/textView18"
            tools:text="Data zgłoszenia" />

        <TextView
            android:id="@+id/report_theme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/report_date"
            app:layout_constraintStart_toStartOf="@+id/report_date"
            app:layout_constraintTop_toBottomOf="@+id/report_date"
            tools:text="Temat" />

        <TextView
            android:id="@+id/report_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/report_theme"
            app:layout_constraintStart_toStartOf="@+id/report_theme"
            app:layout_constraintTop_toBottomOf="@+id/report_theme"
            tools:text="Wiadomość" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/what_do_you_want_to_do"
            android:textColor="@color/accent"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/report_message"
            app:layout_constraintStart_toStartOf="@+id/report_message"
            app:layout_constraintTop_toBottomOf="@+id/report_message" />

        <RelativeLayout
            android:id="@+id/report_action_rel_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_spinner"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/report_message"
            app:layout_constraintStart_toStartOf="@+id/report_message"
            app:layout_constraintTop_toBottomOf="@+id/textView7">

            <Spinner
                android:id="@+id/report_action_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:spinnerMode="dropdown" />

        </RelativeLayout>

        <Button
            android:id="@+id/report_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:paddingLeft="24dp"
            android:paddingTop="16dp"
            android:paddingRight="24dp"
            android:paddingBottom="16dp"
            android:text="@string/select_option"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/report_action_rel_spinner"
            app:layout_constraintStart_toStartOf="@+id/report_action_rel_spinner"
            app:layout_constraintTop_toBottomOf="@+id/report_action_rel_spinner" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>